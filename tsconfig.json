{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "ES2021",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "skipLibCheck": true,
    "strictNullChecks": false,
    "noImplicitAny": false,
    "strictBindCallApply": false,
    "forceConsistentCasingInFileNames": false,
    "noFallthroughCasesInSwitch": false,
    "paths": {
      "@app/core": ["libs/core/src"],
      "@app/core/*": ["libs/core/src/*"],
      "@app/shared": ["libs/shared/src"],
      "@app/shared/*": ["libs/shared/src/*"],
      "@app/rabbitmq": ["libs/rabbitmq/src"],
      "@app/rabbitmq/*": ["libs/rabbitmq/src/*"],
      "@app/prisma": ["libs/prisma/src"],
      "@app/prisma/*": ["libs/prisma/src/*"],
      "@app/telemetry": ["libs/telemetry/src"],
      "@app/telemetry/*": ["libs/telemetry/src/*"],
      "@app/livekit": ["libs/livekit/src"],
      "@app/livekit/*": ["libs/livekit/src/*"],
      "@app/llm": ["libs/llm/src"],
      "@app/llm/*": ["libs/llm/src/*"],
      "@app/redis": ["libs/redis/src"],
      "@app/redis/*": ["libs/redis/src/*"]
    }
  }
}
